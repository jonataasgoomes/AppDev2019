<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.unb.meau">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_meau"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_meau_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ApadrinharActivity"></activity>
        <activity android:name=".activity.CadastroPessoaActivity" />
        <activity android:name=".activity.AdotarActivity" />
        <activity android:name=".activity.CadastroDoAnimalActivity" />
        <activity android:name=".activity.AjudarActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>