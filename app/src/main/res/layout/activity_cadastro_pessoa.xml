<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/main_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/mensagem_cadastro"
                android:layout_width="328dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorAzulMensagem"
                android:fontFamily="@font/roboto"
                android:padding="5dp"
                android:text="@string/mensagem_cadastro"
                android:textAlignment="center"
                android:textColor="@color/text_card_color" />

            <TextView
                android:id="@+id/info_pessoais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                android:text="@string/info_pessoais"
                android:textColor="@color/colorAzul" />

            <EditText
                android:id="@+id/editTextNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/text_nome"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:textColor="@color/color_disabled_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextIdade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/text_idade"
                android:inputType="number"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:textColor="@color/color_disabled_text"
                android:textSize="14sp" />


            <EditText

                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/text_email"

                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:textColor="@color/color_disabled_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/text_estado"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:textColor="@color/color_disabled_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/text_cidade"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:textColor="@color/color_disabled_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/text_endereco"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:textColor="@color/color_disabled_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextTelefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/text_telefone"
                android:inputType="number|phone"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:textColor="@color/color_disabled_text"
                android:textSize="14sp" />

            <TextView

                android:id="@+id/textViewInfoPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/roboto"
                android:text="INFORMAÇÔES DE PERFIL"
                android:textColor="@color/colorAzul" />

            <EditText
                android:id="@+id/editTextNomeUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="@string/text_nome_usuario"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"

                android:textColor="@color/color_disabled_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:textColor="@color/color_disabled_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextPassConf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/text_pass_conf"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:textColor="@color/color_disabled_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/roboto"
                android:text="FOTO DE PERFIL"
                android:textColor="@color/colorAzul"
                android:visibility="invisible" />


            <Button
                android:id="@+id/buttonFazerCadastro"
                style="@style/button_primary_entrar"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:text="@string/text_fazer_cadastro"
                android:textColor="@color/text_card_color"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>